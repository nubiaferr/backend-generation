programa
{
	
	funcao inicio()
	{
		inteiro custo, custoFabrica

		escreva("Qual é o custo de fábrica do veículo? ")
		leia(custoFabrica)
				
		custo = custoFabrica + ((custoFabrica*28)/100) + ((custoFabrica*45)/100)

		escreva("O custo para o consumidor será de " + custo + " R$")
	}
}
